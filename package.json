{
  "name": "pssi",
  "version": "0.1.0",
  "description": "Pleading Sanity System Intelligence – Windows desktop agent",
  "main": "app/electron/main.ts",
  "scripts": {
    "dev": "concurrently \"pnpm renderer:dev\" \"pnpm server:dev\" \"pnpm electron:dev\"",
    "electron:dev": "ts-node app/electron/main.ts",
    "build": "pnpm renderer:build && tsc -p tsconfig.json",
    "server": "ts-node app/server/index.ts",
    "server:dev": "nodemon --watch app/server --exec ts-node app/server/index.ts",
    "renderer:dev": "vite",
    "renderer:build": "vite build",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "electron",
    "system-monitor",
    "deployment"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.42",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.0",
    "typescript": "^5.3.2",
    "vite": "^5.0.4",
    "tailwindcss": "^3.3.6",
    "postcss": "^8.4.32",
    "autoprefixer": "^10.4.16",
    "electron": "^28.0.0",
    "ts-node": "^10.9.1",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.10",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "@types/supertest": "^6.0.2"
  "description": "Pleading Sanity System Intelligence – AI optimizer for Windows, Android, and handhelds",
  "type": "module",
  "main": "dist-electron/main.js",
  "author": "pleadingSanity",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"wait-on tcp:5173 && electron .\"",
    "electron:build": "tsc && vite build && electron-builder",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "server:dev": "tsx watch app/server/index.ts",
    "server:build": "tsc -p tsconfig.server.json"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@netlify/functions": "^5.1.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.25",
    "@types/node": "^20.19.25",
    "@types/react": "^18.3.27",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.7.0",
    "concurrently": "^8.2.2",
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.24",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vite": "^5.4.21",
    "vite-plugin-electron": "^0.28.8",
    "vite-plugin-electron-renderer": "^0.14.6",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.pleadingsanity.pssi",
    "productName": "PSSI",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "win": {
      "target": [
        "nsis",
        "msi",
        "zip"
      ]
    }
  }
}
