{
  "name": "pssi",
  "version": "0.1.0",
  "description": "Pleading Sanity System Intelligence â€“ AI optimizer for Windows, Android, and handhelds",
  "main": "dist/electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"pnpm run dev:vite\" \"pnpm run dev:electron\" \"pnpm run dev:server\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "dev:server": "tsx app/server/index.ts",
    "build": "pnpm run build:renderer && pnpm run build:electron && pnpm run build:server",
    "build:renderer": "vite build",
    "build:electron": "tsc -p app/electron/tsconfig.json",
    "build:server": "tsc -p app/server/tsconfig.json",
    "package": "pnpm run build && electron-builder",
    "package:win": "pnpm run build && electron-builder --win",
    "package:all": "pnpm run build && electron-builder --win --mac --linux",
    "start": "electron .",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "typecheck": "tsc --noEmit",
    "test": "echo \"Tests will be added in future iterations\" && exit 0"
  },
  "keywords": [
    "electron",
    "vite",
    "react",
    "ai",
    "system-optimizer"
  ],
  "author": "Pleading Sanity",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/express": "^4.17.21",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.7",
    "vite-plugin-electron": "^0.28.0",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "axios": "^1.6.2",
    "systeminformation": "^5.21.20",
    "openai": "^4.20.1",
    "dotenv": "^16.3.1"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "build": {
    "appId": "com.pleadingsanity.pssi",
    "productName": "PSSI",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.ico",
      "artifactName": "PSSI-${version}-${arch}-setup.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "mac": {
      "target": ["dmg", "zip"],
      "category": "public.app-category.productivity",
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Utility",
      "icon": "build/icon.png"
    }
  }
}
